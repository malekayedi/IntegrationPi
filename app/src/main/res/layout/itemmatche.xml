<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
  >


    <ImageView
        android:id="@+id/imageplayer2"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/nameplayer2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageplayer1"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="69dp"
        android:scaleType="centerCrop"
        android:src="@drawable/test1"
        app:layout_constraintEnd_toStartOf="@+id/listName"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/textStyleBlod" />

    <TextView
        android:id="@+id/datematchedt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginEnd="53dp"
        android:layout_marginBottom="32dp"
        android:text="20/02/2024"

        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/nameplayer2"
        app:layout_constraintHorizontal_bias="0.568"
        app:layout_constraintStart_toEndOf="@+id/nameplayer1" />

    <TextView
        android:id="@+id/listName"
        android:layout_width="42dp"
        android:layout_height="60dp"
        android:layout_marginStart="69dp"
        android:layout_marginTop="76dp"
        android:layout_toEndOf="@id/imageplayer1"
        android:text="vs"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/imageplayer1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView

        android:id="@+id/nameplayer2"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_below="@id/imageplayer1"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="24dp"
        android:text="aziz badri"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageplayer2" />

    <TextView
        android:id="@+id/nameplayer1"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@id/listName"
        android:text="malek ayedi"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageplayer1" />

    <ImageButton
        android:id="@+id/notif"
        android:layout_width="42dp"
        android:layout_height="37dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/baseline_notifications_none_24"/>
    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:layout_marginTop="30dp"
        android:background="#dad8d8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameplayer2" />

    <TextView
        android:id="@+id/scoreplayer2"
        android:layout_width="39dp"
        android:layout_height="74dp"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="16dp"
        android:text="0"
        android:textSize="60sp"
        app:layout_constraintBottom_toTopOf="@+id/datematchedt"
        app:layout_constraintEnd_toStartOf="@+id/imageplayer2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/listName" />

    <TextView
        android:id="@+id/scoreplayer1"
        android:layout_width="39dp"
        android:layout_height="74dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="52dp"
        android:layout_marginBottom="16dp"
        android:text="6"
        android:textSize="60sp"
        app:layout_constraintBottom_toTopOf="@+id/datematchedt"
        app:layout_constraintStart_toEndOf="@+id/imageplayer1"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>